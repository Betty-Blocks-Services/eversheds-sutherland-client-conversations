    {
      "name": "data",
      "label": "Value",
      "meta": {
        "type": "Value",
        "allowedKinds": [
          "ARRAY",
          "COLLECTION",
          "BOOLEAN",
          "INTEGER",
          "JSON",
          "OBJECT",
          "RECORD",
          "STRING"
        ],
        "validations": {
          "required": true
        }
      },
